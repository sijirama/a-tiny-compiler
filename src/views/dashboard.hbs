<h5 class="header" >Dashboard</h5>
<h4 class="subheader">Welcome {{name}}</h4>

{{#if stories}}
    <p class="">Here are your stories</p>
    
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td> <a href="/stories/{{_id}}"/>{{title}}</a> </td>
                    <td> {{createdAt}} </td>
                    <td> <span class="dash-status">{{status}}</span> </td>
                    <td>  </td>
                </tr>
            {{/each}}
        </tbody>
    </table>






{{else}}
    <h6>You have no stories told yet.</h6>

{{/if}}
