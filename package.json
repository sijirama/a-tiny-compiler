{
  "name": "blazon",
  "version": "1.0.0",
  "description": "share stories with everyone",
  "main": "server.js",
  "publish": "dist",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server",
    "start": "node dist/server.js",
    "copy-static-files": "cp -r ./src/public ./dist",
    "prestart": "npm run build && npm run copy-static-files",
    "build": "tsc && npm run copy-static-files",
    "deploy": "npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sijirama/blazon.git"
  },
  "author": "Sijirama",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sijirama/blazon/issues"
  },
  "homepage": "https://github.com/sijirama/blazon#readme",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/method-override": "^0.0.32",
    "@types/morgan": "^1.9.4",
    "@types/passport": "^1.0.12",
    "@types/passport-google-oauth20": "^2.0.11",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@types/node": "^18.15.12",
    "connect-mongo": "^5.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.7",
    "express-session": "^1.17.3",
    "method-override": "^3.0.0",
    "moment": "^2.29.4",
    "mongoose": "^7.0.4",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0"
  }
}
